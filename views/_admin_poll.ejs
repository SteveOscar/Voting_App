        <div id="connection-count"></div>
        <div id="status-message"></div>
      </div>
      <div id="results">
        <div id="A"></div>
        <div id="B"></div>
        <div id="C"></div>
        <div id="D"></div>
      </div>
    </div>
    <% include ./partials/scripts %>
    <script src="/admin.js"></script>
