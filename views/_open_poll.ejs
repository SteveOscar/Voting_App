<!DOCTYPE html>
<html>
  <head>
    <% include ./partials/head %>
  </head>
  <body>
    <h1>Now Viewing Poll: <%=poll.title%></h1>
    <div id="container" class="col">
      <p> Cast your vote below... </p>
    </div>
    <div id="connection-count"></div>
    <div id="status-message"></div>
    <div id="A"></div>
    <div id="B"></div>
    <div id="C"></div>
    <div id="D"></div>
    <div id="vote-confirmation"></div>
    <div id="choices">
      <button id="A" class="poll-button"><%=poll.options1%></button>
      <button id="B" class="poll-button"><%=poll.options2%></button>
      <button id="C" class="poll-button"><%=poll.options3%></button>
      <button id="D" class="poll-button"><%=poll.options4%></button>
    </div>

    <% include ./partials/scripts %>
  </body>
</html>
